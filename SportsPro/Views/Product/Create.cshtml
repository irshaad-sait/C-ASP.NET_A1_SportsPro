@model SportsPro.Models.Product

@{
    ViewData["Title"] = "Add";
}

<h1 class="row justify-content-center">Add</h1>

<h4 class="row justify-content-center">Product</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="ProductCode" class="control-label">Product Code</label>
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Product Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearlyPrice" class="control-label">Yearly Price</label>
                <input asp-for="YearlyPrice" class="form-control" />
                <span asp-validation-for="YearlyPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label">Release Date</label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group justify-content-center">
                <input type="submit" value="Create" class="btn btn-secondary" />
                <input type="reset" value="Cancel" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div class="row justify-content-center">
    <a asp-action="Index">Back to List</a>
</div>

