@model SportsPro.Models.Incident

@{
    ViewData["Title"] = "Add Incident";
}

<h1 class="row justify-content-center">Add</h1>

<h4 class="row justify-content-center">Incident</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CustomerID" class="control-label">Customer Name</label>
                <select asp-for="CustomerID" class="form-control">
                    <option value="">Please select...</option>
                    @foreach (Customer customer in ViewBag.Customers)
                    {
                        <option value="@customer.CustomerID">@customer.FullName</option>
                    }
                </select>
                <span asp-validation-for="CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label">Product Name</label>
                <select asp-for="ProductID" class="form-control">
                    <option value="">Please select...</option>
                    @foreach (Product product in ViewBag.Products)
                    {
                        <option value="@product.ProductID">@product.Name</option>
                    }
                </select>
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TechnicianID" class="control-label">Technician Name</label>
                <select asp-for="TechnicianID" class="form-control">
                    <option value="">Please select...</option>
                    @foreach (Technician technician in ViewBag.Technicians)
                    {
                        <option value="@technician.TechnicianID">@technician.Name</option>
                    }
                </select>
                <span asp-validation-for="TechnicianID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOpened" class="control-label"></label>
                <input asp-for="DateOpened" class="form-control" />
                <span asp-validation-for="DateOpened" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateClosed" class="control-label"></label>
                <input asp-for="DateClosed" class="form-control" />
                <span asp-validation-for="DateClosed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-secondary" />
                <input type="reset" value="Cancel" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}